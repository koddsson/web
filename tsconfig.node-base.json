{
  "compilerOptions": {
    "target": "ES2021",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "strict": true,
    "moduleResolution": "nodenext",
    "typeRoots": ["@types", "./types"],
    "types": ["node", "mocha", "chai"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2021",
      "ScriptHost"
    ]
  }
}
